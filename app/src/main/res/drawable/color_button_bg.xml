<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleColor"> <!-- Ripple color -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="50dp"/>
            <solid android:color="@color/light_green" /> <!-- Button background -->
            <!-- The <size> tag here will be overridden by the Button's layout_width/height -->
            <!-- So it's not strictly necessary if the Button defines its own dimensions. -->
            <!-- <size android:height="100dp" android:width="100dp"/> -->
        </shape>
    </item>
</ripple>